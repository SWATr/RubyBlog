<p id="notice"><%= notice %></p>

<h1>Listing Fullposts</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th>Tag</th>
      <th>Author</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @fullposts.each do |fullpost| %>
      <tr>
        <td><%= fullpost.title %></td>
        <td><%= fullpost.body %></td>
        <td><%= fullpost.tag %></td>
        <td><%= fullpost.author %></td>
        <td><%= link_to 'Show', fullpost %></td>
        <td><%= link_to 'Edit', edit_fullpost_path(fullpost) %></td>
        <td><%= link_to 'Destroy', fullpost, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Fullpost', new_fullpost_path %>
