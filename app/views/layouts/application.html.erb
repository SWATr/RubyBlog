<!DOCTYPE html>
<html>
<head>
  <title>Blogger</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body class="<%= controller.controller_name %>">
  <div id="banner">
    <%= link_to image_tag("mainicon.png", :alt => 'BuzzfeedMock'), "/" %> 
    <%= @page_title || "Open Blog" %>
	
    <div id="menu">
      <ul>
        <lil><a href="/news">News</a></lil>
        <lil><a href="/videos">Videos</a></lil>
        <lil><a href="/diy">DIY</a></lil>
        <lil><a href="/food">Food</a></lil>
        <lir><%= image_tag("person.png") %></lir>
      </ul>
    </div>
  </div>
  <div id="links>
    <!-- <%= link_to "", :class => 'video_link' %> 
	<%= link_to image_tag("Video1.png", height: '100', onMouseover: "this.src='/assets/Video2.png';", onMouseout: "this.src='/assets/Video1.png'"), "/videos" %>
	<%= link_to image_tag("Food1.png", height: '100', onMouseover: "this.src='/assets/Food2.png';", onMouseout: "this.src='/assets/Food1.png'"), "/videos" %>

	</div>
  <div id="columns">
    <div id="main">
      <%= yield %>
    </div>
  </div>
  <div id="footer">
    <%= render "layouts/footer" %>
  </div>
</body>
</html>
