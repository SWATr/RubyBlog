<% @name = User.find(session[:user_id]) %>
<% @username = User.find(session[:user_id]).email %>
<% @user = @username.gsub(/@.*/, '') %>
<% @posts = Fullpost.all %>
<h1>Do It Yourself</h1>
<% @posts.each do |post| %> 
<% if post.tag == "DIY" %>
<% @title = post.title %> 
  <div class="entry">
    <h3><%= link_to @title, post %></h3>
    <p><%= sanitize(post.body) %></p>
    <div class="post_info_line">
      <span class="author">Posted by <%=  post.author %></span>
      <span class="posted"><%=  time_ago_in_words(post.created_at) %></span>
    </div>
	</div>
<% end %>
<% end %>
